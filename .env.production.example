# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3002
FRONTEND_URL=https://dampol2nda.gov.ph
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION (Supabase)
# ==============================================
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your-production-supabase-anon-key
SUPABASE_SERVICE_KEY=your-production-supabase-service-key
DATABASE_URL=postgresql://postgres:password@db.your-production-project.supabase.co:5432/postgres

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
JWT_SECRET=your-super-secure-production-jwt-secret-key-here
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-secure-redis-password

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@dampol2nda.gov.ph
SMTP_PASS=your-secure-email-password
EMAIL_FROM=noreply@dampol2nda.gov.ph

# ==============================================
# FILE STORAGE (Supabase Storage)
# ==============================================
SUPABASE_STORAGE_BUCKET=documents-production
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# ==============================================
# SECURITY SETTINGS
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://dampol2nda.gov.ph
ALLOWED_ORIGINS=https://dampol2nda.gov.ph,https://www.dampol2nda.gov.ph

# ==============================================
# LOGGING & MONITORING
# ==============================================
LOG_LEVEL=warn
ENABLE_AUDIT_LOGS=true
SENTRY_DSN=your-production-sentry-dsn

# ==============================================
# EXTERNAL SERVICES
# ==============================================
GOOGLE_MAPS_API_KEY=your-production-google-maps-api-key
RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-production-recaptcha-secret-key

# ==============================================
# BARANGAY SPECIFIC SETTINGS
# ==============================================
BARANGAY_NAME="Dampol 2nd A"
BARANGAY_CODE=123456
BARANGAY_CAPTAIN="Barangay Captain Name"
BARANGAY_ADDRESS="Dampol 2nd A, Pulilan, Bulacan"
BARANGAY_PHONE="+63-2-123-4567"
BARANGAY_EMAIL="info@dampol2nda.gov.ph"

# ==============================================
# COMPLIANCE SETTINGS
# ==============================================
ENABLE_DATA_PRIVACY_FEATURES=true
ENABLE_FOI_REQUESTS=true
ENABLE_ACCESSIBILITY_FEATURES=true
DATA_RETENTION_DAYS=2555

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_SCHEDULE=0 2 * * *
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
S3_BACKUP_BUCKET=barangay-backups-production

# ==============================================
# MONITORING CONFIGURATION
# ==============================================
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_SECRET_KEY=your-secure-grafana-secret-key

# ==============================================
# SSL CONFIGURATION
# ==============================================
SSL_CERT_PATH=/etc/nginx/ssl/dampol2nda.gov.ph.crt
SSL_KEY_PATH=/etc/nginx/ssl/dampol2nda.gov.ph.key

# ==============================================
# NOTIFICATION SETTINGS
# ==============================================
SLACK_WEBHOOK_URL=your-production-slack-webhook-url
DISCORD_WEBHOOK_URL=your-production-discord-webhook-url

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_STREAMING=true
ENABLE_DOCUMENT_REQUESTS=true
ENABLE_ANNOUNCEMENTS=true
ENABLE_FEEDBACK=true
ENABLE_SURVEYS=true
ENABLE_ANALYTICS=true

# ==============================================
# PRODUCTION SETTINGS
# ==============================================
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_SEED_DATA=false

# ==============================================
# CDN CONFIGURATION
# ==============================================
CDN_URL=https://cdn.dampol2nda.gov.ph
STATIC_ASSETS_URL=https://assets.dampol2nda.gov.ph

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# ==============================================
# ANALYTICS
# ==============================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
